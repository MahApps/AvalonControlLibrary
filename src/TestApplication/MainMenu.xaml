<Window x:Class="TestApplication.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainMenu">
    <StackPanel Width="150" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>
        </StackPanel.Resources>
        <Button Content="Input Prompt Demo" Click="InputPromptClick" />
        <Button Content="Docky Demo" Click="DockyControlClick" />
        <Button Content="Rating Control Demo" Click="RatingControlClick" />
        <Button Content="Masked TextBox Demo" Click="MaskTextBoxClick"/>
        <Button Content="ListView Sorting Demo" Click="ListViewClick"/>
        <Button Content="DataGridView Demo" Click="DataGridViewClick"/>
        <Button Content="RangeSlider Demo" Click="RangeSliderClick"/>
        <Button Content="Magnifier Demo" Click="MagnifierClick"/>
        <Button Content="Date Picker Demo" Click="DatePickerClick"/>
        <Button Content="Time Picker Demo" Click="TimePickerClick"/>
        <Button Content="Time Span Picker Demo" Click="TimeSpanPickerClick"/>
        <Button Content="Date Time Picker" Click="DateTimePickerClick" />
        <Button Content="TreeListBox Demo" Click="HListBoxClick"/>
    </StackPanel>
</Window>
